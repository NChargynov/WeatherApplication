<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher"
        android:id="@+id/imageIconItem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:paddingTop="4dp"
        android:textSize="18sp"
        android:id="@+id/tvTempNowItem"
        app:layout_constraintTop_toBottomOf="@+id/imageIconItem"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@android:color/black"
        tools:text="15 C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTempMaxItem"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTempNowItem"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="10 C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTempMinItem"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTempMaxItem"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="8 C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>